# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/servoley_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# OTP Configuration
OTP_EXPIRES_IN="300" # 5 minutes in seconds
OTP_LENGTH="6"

# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email Configuration (for email OTP)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@servoley.com"

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Server Configuration
PORT="3000"
NODE_ENV="development"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# File Upload
MAX_FILE_SIZE="5242880" # 5MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPS_PROVIDER="google"

# Razorpay Configuration (for payments - Phase 2)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-razorpay-webhook-secret"

# Push Notification (for notifications - Phase 4)
FCM_SERVER_KEY="your-fcm-server-key"
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
