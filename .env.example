# Server Configuration
PORT=8083
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/servoley"

# CORS Configuration
CORS_ORIGIN=http://localhost:8083,http://localhost:5173,http://localhost:5174

# Project IDX Configuration (add your Project IDX URL when available)
PROJECT_IDX_URL=

# API Configuration
VITE_API_URL=http://localhost:8083

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
