# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================

# Environment
NODE_ENV=production

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/servoley_prod

# JWT Configuration (Use strong, unique secrets)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-64-characters-long-random-string
JWT_SECRET_PREVIOUS=keep-previous-secret-for-graceful-rotation
JWT_REFRESH_SECRET=your-different-super-secure-refresh-secret-key-minimum-64-characters
JWT_REFRESH_SECRET_PREVIOUS=keep-previous-refresh-secret-for-graceful-rotation
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting (Redis recommended for production)
RATE_LIMIT_REDIS_URL=redis://localhost:6379/0
RATE_LIMIT_REDIS_PREFIX=rl:servoley:
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Auth Rate Limits
LOGIN_RATE_LIMIT_WINDOW_MS=60000
LOGIN_RATE_LIMIT_MAX_REQUESTS=5
REGISTER_RATE_LIMIT_WINDOW_MS=600000
REGISTER_RATE_LIMIT_MAX_REQUESTS=15
AUTH_RATE_LIMIT_WINDOW_MS=300000
AUTH_RATE_LIMIT_MAX_REQUESTS=20
OTP_VERIFY_RATE_LIMIT_WINDOW_MS=60000
OTP_VERIFY_RATE_LIMIT_MAX_REQUESTS=10

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret
MOCK_PAYMENT=false

# CORS (Production domains only)
CORS_ORIGIN=https://yourapp.com,https://admin.yourapp.com

# SMS Service (Use secure HTTPS service)
SMS_SERVICE_PROVIDER=your-sms-provider
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_API_URL=https://api.yoursmsprovider.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp

# Email Service (for notifications)
EMAIL_SERVICE_PROVIDER=your-email-provider
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@yourapp.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-for-sessions-if-used

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup & Recovery
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# SSL/TLS
FORCE_HTTPS=true
TRUST_PROXY=true

# Content Security Policy
CSP_ENABLED=true

# Request Limits
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE=1048576

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Cache (Redis)
REDIS_URL=redis://localhost:6379/1
CACHE_TTL=3600

# Webhook Security
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_ESCROW=false
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_REAL_TIME_CHAT=true

# Admin Settings
ADMIN_EMAIL=admin@yourapp.com
SUPPORT_EMAIL=support@yourapp.com

# Development (DISABLE IN PRODUCTION)
DEBUG=false
ENABLE_DEV_TOOLS=false
